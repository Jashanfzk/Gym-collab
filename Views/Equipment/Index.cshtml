@model IEnumerable<GymCollab.Models.Equipment>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="h4">Equipment Inventory</h2>
  <a class="btn btn-sm btn-primary" href="/Equipment/Create">Add Equipment</a>
</div>
<form method="get" class="row g-2 mb-3">
  <div class="col-md-3">
    <select name="category" class="form-select">
      <option value="">All Categories</option>
      @foreach(var c in (IEnumerable<string>)ViewBag.Categories){
        <option selected="@(Context.Request.Query["category"] == c)" value="@c">@c</option>
      }
    </select>
  </div>
  <div class="col-md-5">
    <input name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Search by name" />
  </div>
  <div class="col-md-2"><button class="btn btn-outline-secondary w-100">Filter</button></div>
</form>
<table class="table table-striped">
  <thead><tr><th>Name</th><th>Category</th><th>Quantity</th><th>Supplier</th><th></th></tr></thead>
  <tbody>
  @foreach (var e in Model){
    <tr>
      <td>@e.Name</td><td>@e.Category</td><td>@e.Quantity</td><td>@e.Supplier</td>
      <td>
        <a class="btn btn-sm btn-outline-secondary" href="/Equipment/Details/@e.EquipmentId">View</a>
        <a class="btn btn-sm btn-outline-primary" href="/Equipment/Edit/@e.EquipmentId">Edit</a>
        <a class="btn btn-sm btn-outline-danger" href="/Equipment/Delete/@e.EquipmentId">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>
