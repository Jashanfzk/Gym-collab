@model IEnumerable<GymCollab.Models.Member>
@{
    ViewData["Title"] = "Members";
}
<div class="d-flex align-items-center justify-content-between mb-3">
  <h2>Members</h2>
  <a class="btn btn-primary" href="/Members/Create">Add Member</a>
</div>
<form method="get" class="mb-3">
  <input type="text" name="q" placeholder="Search name" class="form-control" value="@Context.Request.Query["q"]" />
  <button class="btn btn-outline-secondary mt-2" type="submit">Search</button>
  <a class="btn btn-link mt-2" href="/Members">Clear</a>
</form>
<table class="table table-striped">
  <thead>
    <tr><th>Name</th><th>Email</th><th>Phone</th><th>Preferred Trainer</th><th></th></tr>
  </thead>
  <tbody>
  @foreach (var m in Model)
  {
      <tr>
        <td>@m.FullName</td>
        <td>@m.Email</td>
        <td>@m.Phone</td>
        <td>@m.PreferredTrainer</td>
        <td>
          <a class="btn btn-sm btn-outline-primary" href="/Members/Details/@m.MemberId">Details</a>
          <a class="btn btn-sm btn-outline-secondary" href="/Members/Edit/@m.MemberId">Edit</a>
          <a class="btn btn-sm btn-outline-danger" href="/Members/Delete/@m.MemberId">Delete</a>
        </td>
      </tr>
  }
  </tbody>
 </table>


